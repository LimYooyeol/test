<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.test.fasoo.mapper.AuthUserMapper">
    <insert id="createAuthUser" parameterType="com.test.fasoo.dto.AuthUser">
        <!-- 회원가입 -->
        INSERT INTO auth_user(auth_type_id, user_id, resource_id, begin_date, expire_date)
        VALUES(#{authTypeId}, #{userId}, #{resourceId}, #{beginDate}, #{expireDate});
    </insert>

    <!-- 유저 권한 조회 -->
    <select id="readAuthUser" parameterType="java.lang.String" resultType="com.test.fasoo.dto.AuthUser">
        SELECT * FROM auth_user WHERE user_id = #{userId};
    </select>

    <!-- 관리자가 유저 권한 목록 조회   -->
    <select id="getUserList" parameterType="java.lang.String" resultType="hashmap">
        SELECT * FROM auth_user WHERE auth_type_id = (
            SELECT auth_type_id FROM  WHERE
        )
    </select>

    <select id="getAuthList" parameterType="java.lang.String" resultType="hashmap">
        SELECT * FROM auth_user WHERE user_id = #{userId};
    </select>
</mapper>